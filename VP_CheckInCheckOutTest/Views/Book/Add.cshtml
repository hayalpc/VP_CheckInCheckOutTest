@model Book
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="offset-sm-3 col-sm-6">
        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Book Form</h3>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Title, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Title) })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.ISBN, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.ISBN, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.ISBN) })
                            @Html.ValidationMessageFor(m => m.ISBN, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.PublishYear, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.PublishYear, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.PublishYear) })
                            @Html.ValidationMessageFor(m => m.PublishYear, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.CoverPrice, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            <input type="text" value="@Model.CoverPrice" name="CoverPrice" placeholder="@Html.DisplayNameFor(m => m.CoverPrice)" class="form-control decimalReverse" />
                            @Html.ValidationMessageFor(m => m.CoverPrice, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary float-right">Save</button>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts{
    <script>
        $(function () {
            $('.decimalReverse').mask('#0,00', { reverse: true });
            $('#PublishYear').mask('9999');
            $('#ISBN').mask('99999999999999');
        });
    </script>
}